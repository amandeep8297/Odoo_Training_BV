<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_training_inherit.payment" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[contains(@class,'button next validation')]" position="replace">
        <t t-if="this.env.pos.get_order().partner == null">
            <div t-if="!env.isMobile" class="button next validation" t-att-class="{ highlight: currentOrder.is_paid() and currentOrder._isValidEmptyOrder() }" t-on-click="_isPartnerValid">
                <div class="pay-circle">
                    <i class="fa fa-chevron-right" role="img" aria-label="Pay" title="Pay" />
                </div>
                <span class="next_text">Validate</span>
            </div>
        </t>

        <t t-else="">
            <div t-if="!env.isMobile" class="button next validation" t-att-class="{ highlight: currentOrder.is_paid() and currentOrder._isValidEmptyOrder() }" t-on-click="() => this.trigger('validate-order')">
                <div class="pay-circle">
                    <i class="fa fa-chevron-right" role="img" aria-label="Pay" title="Pay" />
                </div>
                <span class="next_text">Validate</span>
            </div>
        </t>
        </xpath>
    </t>
</templates>