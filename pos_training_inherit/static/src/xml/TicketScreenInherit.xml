<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ShowPhoneInTree" t-inherit="point_of_sale.TicketScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[contains(@class, 'header-row')]" position="inside">
                <div>Phone number</div>
        </xpath>
        <xpath expr="//div[contains(@class, 'order-row')]" position="inside">
            <div class="col num">
               <div> <t t-esc="customerPhone.phone"/></div>
            </div>
        </xpath>
    </t>
</templates>
